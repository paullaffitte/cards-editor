{
  "name": "cards-editor",
  "author": {
    "name": "Paul Laffitte",
    "email": "paul.laffitte@epitech.eu"
  },
  "description": "A cards editor",
  "version": "1.3.0",
  "private": true,
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "electron-settings": "^3.2.0",
    "github-release-cli": "^1.0.1",
    "i18next": "^17.0.3",
    "immutability-helper": "^3.0.0",
    "key-mirror": "^1.0.1",
    "node-sass": "^4.13.0",
    "react": "^16.8.0",
    "react-beautiful-dnd": "^11.0.3",
    "react-dom": "^16.8.0",
    "react-i18next": "^10.11.0",
    "react-redux": "^6.0.0",
    "react-scripts": "2.1.3",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "semver": "^6.0.0",
    "system-font-families": "^0.4.1",
    "uuid": "^3.3.2"
  },
  "engines": {
    "node": ">=12.13"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "build-icons": "electron-icon-builder --input=./public/icon.png --output=./build --flatten",
    "pack": "yarn build-icons && electron-builder -c.extraMetadata.main=src/electron/main.js --dir",
    "dist": "yarn build-icons && electron-builder -c.extraMetadata.main=src/electron/main.js",
    "release": "yarn build && yarn dist",
    "release-on-github": "./publish.sh"
  },
  "main": "src/electron/main.js",
  "homepage": "./",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "antd": "^3.12.3",
    "electron": "^11.5.0",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "electron-icon-builder": "^1.0.0"
  },
  "build": {
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "src/electron/**/*",
      "src/constants/i18n/**/*"
    ],
    "directories": {
      "buildResources": "./build"
    },
    "linux": {
      "category": "Graphics",
      "target": [
        "deb"
      ]
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    },
    "nsis": {
      "differentialPackage": false
    },
    "icon": "icons"
  }
}
